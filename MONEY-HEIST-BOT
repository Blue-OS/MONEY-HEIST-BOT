

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $MONEY-HEIST_REPO == "MONEY-HEIST-BOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1Byb2Zlc3Nvci1Nb25leS1IZWlzdC9NT05FWS1CT1QtUEcvYXJjaGl2ZS9MZWdlbmRCb3Quemlw" | base64 -d
    elif [[ $MONEY-HEIST_REPO == "MONEY-HEIST-BOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1Byb2Zlc3Nvci1Nb25leS1IZWlzdC9NT05FWS1CT1QtUEcvYXJjaGl2ZS9MZWdlbmRCb3Quemlw" | base64 -d
    elif [[ $MONEY-HEIST_REPO =~ $regex ]]
    then
        if [[ $MONEY-HEIST_REPO_BRANCH ]]
        then
            echo "${MONEY-HEIST_REPO}/archive/${MONEY-HEIST_REPO_BRANCH}.zip"
        else
            echo "${MONEY-HEIST_REPO}/archive/Legendbot.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1Byb2Zlc3Nvci1Nb25leS1IZWlzdC9NT05FWS1CT1QtUEcvYXJjaGl2ZS9MZWdlbmRCb3Quemlw" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="Bella-Ciao.zip"
    echo "  Downloading Money Hesit Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    MONEY-HEISTPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo " Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $MONEY-HEISTPATH
    echo "    üí∞Startingüí∞.  "
    echo "
    ü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏èü§ç‚ù§Ô∏è
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
