

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $Professor-Money-Heist_REPO == "MONEY-HEIST-BOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0JsdWUtT1MvTU9ORVktQk9ULVBHL2FyY2hpdmUvbGVnZW5kYm90LnppcA==" | base64 -d
    elif [[ $professor-Money-Heist_REPO == "MONEY-HEIST-BOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0JsdWUtT1MvTU9ORVktQk9ULVBHL2FyY2hpdmUvbGVnZW5kYm90LnppcA==" | base64 -d
    elif [[ $Professor-Money-Heist_REPO =~ $regex ]]
    then
        if [[ $Professor-Money-Heist_REPO_BRANCH ]]
        then
            echo "${Ptofessor-Money-Heist_REPO}/archive/${Professor-Money-Heist_REPO_BRANCH}.zip"
        else
            echo "${Professor-Money-Heist_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0JsdWUtT1MvTU9ORVktQk9ULVBHL2FyY2hpdmUvbGVnZW5kYm90LnppcA==" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="MONEY-HEIST-BOT.zip"
    echo "  Downloading MoneyHeistBot V3.O Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    Professor-Money-HeistPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  MONEY-HEIST-BOT V3.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $Professor-Money-HeistPATH
    echo "    ðŸ’°Starting MONEY-HEIST-BOTðŸ’°     "
    echo "
    ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³ðŸ‡®ðŸ‡³
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
